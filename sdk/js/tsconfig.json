{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",            // Changed from ESNext
    "moduleResolution": "NodeNext",  // Changed from Bundler
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src"]
}